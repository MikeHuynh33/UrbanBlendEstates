@model CreativeCollab.Models.PropertyDetailDTO
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>
<style>
    .deleteConfirm_container{
        display:flex;
        justify-content:center;
        margin: 5em 10em;
        align-items:center;
        flex-wrap:wrap;
        gap:2em;
        flex-direction:column;
       
    }
    .address{
        font-size:3em;
        margin-bottom:1em;
    }
    .status{
        text-align:center;
        font-size:2em;
    }
    input[type=submit]{
        padding:1em 3em;
        border:2px solid black;
        border-radius:20px;
        font-size:1em;
        font-weight:bold;
    }
    .btn_back{
        text-align:center;
        margin-bottom:1.5em;
    }
    .btn_back>a{
        font-size:2em;
        font-weight:bolder;
        color:green;
        padding:0.3em 0.6em;
        border:2px solid black;
        border-radius:50%;
        text-decoration:none;
    }
</style>
<div class="deleteConfirm_container">
    <div>
        <div class="btn_back"><a href="../../Admin"><</a></div>
        <div class="address">Address: @Model.PropertyAddress </div>
        <div class="status">Status: @Model.PropertyStatus</div>
    </div>
    <form action="/Admin/DeleteProperty/@Model.PropertyID" method="POST">
        <input type="submit" value="Confirm Delete" />
</div> 