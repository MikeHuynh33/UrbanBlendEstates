@model CreativeCollab.Models.PropertyDetailDTO
@{
    ViewBag.Title = "PropertyDetail";
}


<style>
    .glass-container {
        background: rgba(20, 19, 19, 0.76);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(20, 19, 19, 0.3);
    }
    .icon_image {
        width: 36px;
        height: 36px;
    }
</style>
<div class="container mt-5 glass-container">
    <h1 class="fw-bolder text-white mt-3 ms-3">Property Detail</h1>
    <div class="row mt-3">
        <div class="col-7 text-white g-2">
            <div class="row mt-3">
                <div class="d-flex flex-column flex-wrap align-items-center justify-content-center mb-3">
                    <img class="icon_image"src="~/Content/photos/location.png" />
                    <div class="fs-3 text-center text-white fw-bolder mt-2">@Model.PropertyAddress</div>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-4 fs-4 text-center fw-bolder">
                    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center">
                        <img class="icon_image" src="~/Content/photos/home.png" />
                        <div class=" text-center text-success fw-bolder">$@Model.PropertyPrice.ToString("N0")</div>
                    </div>
                </div>
                <div class="col-1 fs-4 text-center fw-bolder">
                    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center">
                        <img class="icon_image" src="~/Content/photos/double-bed.png" />
                        <div>@Model.NumberOfBedrooms</div>
                    </div>
                </div>
                <div class="col-1 fs-4 text-center fw-bolder">
                    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center">
                        <img class="icon_image" src="~/Content/photos/bathroom.png" />
                        <div>@Model.NumberOfBathrooms</div>
                    </div>
                </div>
                <div class="col-3 fs-5 text-center fw-bolder">
                    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center">
                        <img class="icon_image" src="~/Content/photos/calendar.png" />
                        <div class="mt-2">@Model.ListingDate.ToShortDateString()</div>
                    </div>
                </div>
                <div class="col-3 fs-4 text-center fw-bolder">
                    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center">
                        <img class="icon_image" src="~/Content/photos/dimension.png" />
                        <div class="text-center text-white fw-bolder">@Model.PropertySize</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-5 text-white g-2 fs-6">
            <span class="fs-4">Description:</span>
            <p class="ms-3 me-3"> @Model.PropertyDescription</p>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-7 mb-2">
            <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/photo_property/1001_01.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/photo_property/1001_02.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/photo_property/1001_03.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-5 mb-2">
            <div class="row">
                <div class="col-12">
                    <div class="fs-3 text-white fw-bolder">Amentities : </div>
                    <ul class="d-flex text-white flex-column">
                        @{ string[] amentity = Model.Amenities.Split(','); }
                        @foreach (var item in amentity)
            {
                        <li>@item</li>
            }
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="fs-3 text-white fw-bolder">Under Management : </div>
                    <ul class="d-flex text-white flex-column" >
                        @foreach(var agent in Model.Agents)
            {
                            <li class="mt-4">
                                <div class="fs-5 fw-bolder text-white" >
                                    @agent.Name - @agent.Email
                                </div>
                                <div class="fs-6 text-white-50">
                                    @agent.Phone - @agent.Role
                                </div>
                            </li>
            }
                    </ul>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-8 text-center">
                    <span class="fs-4 fw-bold text-white" >Let Us Meet You !</span>
                </div>
                <div class="col-4">
                   <a class="btn btn-primary p-2 " href='../BookMeeting/@Model.PropertyID'>Book Meeting</a>
                </div>
            </div>
        </div>
    </div>
</div>

    