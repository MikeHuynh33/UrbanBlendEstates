@model CreativeCollab.Models.PropertyDetailDTO
@{
    ViewBag.Title = "PropertyDetail";
}


<style>
    .glass-container {
        background: rgba(20, 19, 19, 0.76);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(20, 19, 19, 0.3);
    }
    img{
        width:36px;
        height:36px;
    }
</style>
<div class="container mt-5 glass-container">
    <h1 class="fw-bolder text-white mt-3 ms-3">Property Detail</h1>
    <div class="row mt-3">
        <div class="col-6 text-white g-2">
            <div class="fs-2 text-center mb-3">@Model.PropertyAddress</div>
            <div class="row">
                <div class="col-4 fs-4 text-center fw-bolder">
                    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center">
                        <img src="~/Content/photos/home.png" />
                        <div class=" text-center text-success fw-bolder">$@Model.PropertyPrice.ToString("N0")</div>
                    </div>
                </div>
                <div class="col-2 fs-4 text-center fw-bolder">
                    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center">
                        <img src="~/Content/photos/double-bed.png" />
                        <div>@Model.NumberOfBedrooms</div>
                    </div>
                </div>
                <div class="col-2 fs-4 text-center fw-bolder">
                    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center">
                        <img src="~/Content/photos/bathroom.png" />
                        <div>@Model.NumberOfBathrooms</div>
                    </div>
                </div>
                <div class="col-4 fs-4 text-center fw-bolder">
                    <div class="d-flex flex-column flex-wrap align-items-center justify-content-center">
                        <img src="~/Content/photos/dimension.png" />
                        <div class="text-center text-white fw-bolder">@Model.PropertySize</div>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-6 ">
                    <ul> <span class="fs-4 fw-bold text-white" > Amenities</span>
                        @{ string[] Amenities = Model.Amenities.Split(','); }
                        @foreach(string amenity in Amenities)
                            {
                            <li class="mb-2 ms-4">@amenity</li>
                            }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>