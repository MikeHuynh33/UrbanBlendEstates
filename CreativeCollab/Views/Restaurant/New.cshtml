@model IEnumerable<CreativeCollab.Models.NeighbourhoodDto>
@{
    ViewBag.Title = "Create";
}

<h2>Create Restaurant</h2>

<form action="/Restaurant/Create" method="POST">
    <div>
        <label>Restaurant:</label> <input type="text" name="RestaurantName" />
    </div>
    <div>
        <label>Neighbourhood:</label>
        <select name="NeighbourhoodId">
            @foreach (var neighbourhood in Model)
            {
                <option value="@neighbourhood.NeighbourhoodId"> @neighbourhood.NeighbourhoodName </option>
            }
        </select>
    </div>

    <div>
        <label>Address</label> <input type="text" name="Address" />
    </div>
    <div>
        <label>Website:</label> <input type="text" name="RestaurantLink" />
    </div>
    <div>
        <label>Description:</label> <textarea name="Description"></textarea>
    </div>
    <div>
        <input type="submit" value="Create Restaurant" />
    </div>
</form>